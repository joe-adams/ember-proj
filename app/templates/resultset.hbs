 <div class='container-fluid'>
	<div class='row'>
		<div class="col-md-4 col-md-offset-1 table-responsive">
		    {{#if model.stocks.length}}
		    	<table class='table-striped'>
			    	<tr><th>Name</th><th>Symbol</th></tr>
			    	<tbody>
					    {{#each model.stocks as |stock|}}
					    	<tr {{action 'chart' stock.id}}><td>{{stock.name}}</td><td>{{stock.symbol}}</td></tr>
					    {{/each}}
			    	</tbody>	
				</table>
		    {{else}}
		    	<table class='table'>
		    		<tr><td>There are no matching stocks</td></tr>
		    	</table>
		    {{/if}}
	    </div>
		<div class="col-md-4 col-md-offset-1 table-responsive" id='chartContainer'>

			{{outlet}}
		</div>
	</div>
</div>